@model ProductVM

<div class="card shadow my-5 border-0">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create New Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="p-3">
                <div class="py-2 col-12 form-floating">
                    <label asp-for="Product.Author" class="text-secondary p-0 ms-2"></label>
                    <input asp-for="Product.Author" class="form-control border-0 shadow" />
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>
                <div class="py-2 col-12 form-floating">
                    <label asp-for="Product.Description" class="text-secondary p-0 ms-2"></label>
                    <textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="py-2 col-12 form-floating">
                    <label asp-for="Product.ISBN" class="text-secondary p-0 ms-2"></label>
                    <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>
                <div class="py-2 col-12 form-floating">
                    <label asp-for="Product.ListPrice" class="text-secondary p-0 ms-2"></label>
                    <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>
                <div class="py-2 col-12 form-floating">
                    <label asp-for="Product.Price" class="text-secondary p-0 ms-2"></label>
                    <input asp-for="Product.Price" class="form-control border-0 shadow"/>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="py-2 col-12 form-floating">
                    <label asp-for="Product.Price50" class="text-secondary p-0 ms-2"></label>
                    <input asp-for="Product.Price50" class="form-control border-0 shadow"/>
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>
                <div class="py-2 col-12 form-floating">
                    <label asp-for="Product.Price100" class="text-secondary p-0 ms-2"></label>
                    <input asp-for="Product.Price100" class="form-control border-0 shadow"/>
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>
                <div class="py-2 col-12 form-floating">
                    <label asp-for="Product.CategoryId" class="text-secondary p-0 ms-2"></label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>--SELECT CATEGORY--</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>

                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-warning text-dark form-control" style="border-radius:5px"> Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index"
                           style="border-radius:5px" class="btn btn-primary text-warning form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}