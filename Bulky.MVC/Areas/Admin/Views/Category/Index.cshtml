@model List<Category>

<div class="card shadow mt-4 border-0">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-action="Create">
                    <i class="bi bi-plus-square text-warning pe-2"></i>
                    Add new category
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped border-opacity-10 border-black ">
            <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            @foreach (Category category in Model.OrderByDescending(c => c.DisplayOrder))
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@category.Id">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@category.Id">
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
