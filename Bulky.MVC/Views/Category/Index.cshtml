@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-warning">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-square text-warning pe-2"></i>
                Add new category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped border-opacity-10 border-black ">
        <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        @foreach (Category category in Model.OrderByDescending(c => c.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@category.Id">
                            <i class="bi bi-pencil-square"></i>
                            Edit
                        </a>
                        <a asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@category.Id">
                            <i class="bi bi-trash-fill"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
